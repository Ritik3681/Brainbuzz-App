<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <item>
        <shape android:shape="rectangle"
            >

            <gradient
                android:startColor="#784381"
                android:endColor="#784381"
                android:centerY="80%"
                android:centerX="80%"
                android:gradientRadius="15dp"
                android:angle="10"/>
            <corners android:radius="20dp"/>



        </shape>
    </item>
    <item
        android:left="5dp"
        android:right="5dp"
        android:top="5dp"
        android:bottom="5dp">
        <shape android:shape="rectangle">

            <solid android:color="#BB6DC8"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>


</layer-list>