<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <item>
        <shape android:shape="rectangle"
            >

            <gradient
                android:startColor="#FDB94B"
                android:endColor="#FDB94B"
                android:centerY="80%"
                android:centerX="80%"
                android:gradientRadius="15dp"
                android:angle="10"/>
            <corners android:radius="10dp"/>



        </shape>
    </item>
    <item
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp">
        <shape android:shape="rectangle">

            <solid android:color="#3C1D5D"/>
            <corners android:radius="10dp"/>
        </shape>
    </item>


</layer-list>