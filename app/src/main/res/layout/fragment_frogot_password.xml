<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/colour1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ForgotPasswordFragment">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="124dp"
        android:background="@drawable/colour2">

    <TextView
        android:id="@+id/forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/white"
        android:text="Account recovery"/>
    <TextView
        android:id="@+id/entermail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/forgot"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        android:textSize="18dp"
        android:textColor="#E5E5E5"
        android:layout_marginTop="60dp"

        android:text="Enter your email"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emailconstraint"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="48dp"
        android:background="@drawable/colour"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toBottomOf="@id/entermail">
        <EditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColorHint="#ACB3BF"
            android:hint="Enter Email Id"
            android:textColor="@color/white"
            android:singleLine="true"
            android:background="@null"
           android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18dp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
    <Button
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/resetPasswordButton"
        app:layout_constraintTop_toBottomOf="@id/emailconstraint"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:text="Reset"
        android:textColor="@color/white"
        android:backgroundTint="#FDB94B"
        android:textSize="18dp"
        android:padding="10dp"
        android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/emailconstraint"
            app:layout_constraintEnd_toStartOf="@id/resetPasswordButton"
            android:layout_marginTop="47dp"
            android:text="/"
            android:layout_marginEnd="10dp"
            android:textColor="#ACB3BF"
            android:textStyle="normal"
            android:textSize="40dp"
            />
        <Button
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:id="@+id/backLoginFragment"
            app:layout_constraintTop_toBottomOf="@id/emailconstraint"
            app:layout_constraintEnd_toStartOf="@id/line"
            android:layout_marginEnd="10dp"
            android:text="Login"
            android:textColor="@color/white"
            android:backgroundTint="#FDB94B"
            android:textSize="18dp"
            android:padding="10dp"
            android:layout_marginTop="50dp"/>
        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/resetPasswordButton"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:textColor="@color/white"
            android:layout_marginTop="80dp"

            android:text="Please enter your registered email address or login above, and we will send you instructions on how to"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:text="reset your password."/>
            />


    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.constraintlayout.widget.ConstraintLayout>