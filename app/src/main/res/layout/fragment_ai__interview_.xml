<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:background="#4F257B"
    android:layout_height="match_parent">




    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI INTERVIEW"
            android:textColor="#FDB94B"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/backPress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/backpress"
            android:layout_marginStart="30dp"
            app:tint="#FDB94B" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/robotImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:cardCornerRadius="20dp"
        android:elevation="20dp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/header"

            android:layout_gravity="center"
            android:src="@drawable/robot3"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.cardview.widget.CardView>


   <HorizontalScrollView
       android:id="@+id/horizonal_scroll"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      app:layout_constraintTop_toBottomOf="@id/header"
       app:layout_constraintStart_toStartOf="parent"

       android:layout_marginTop="50dp">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <androidx.cardview.widget.CardView
               android:id="@+id/advanced"
               android:layout_width="120dp"
               android:layout_height="30dp"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginStart="30dp"
               android:elevation="20dp"
               app:cardCornerRadius="10dp"
               app:layout_constraintStart_toStartOf="parent"
               >
               <TextView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_gravity="center"
                   android:textColor="@color/white"
                   android:background="#FDB94B"
                   android:textStyle="bold"
                   android:padding="2dp"
                   android:textSize="16dp"
                   android:gravity="center"
                   android:text="Hr Inteview"/>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/tech_Interview"
               android:layout_width="120dp"
               android:layout_height="30dp"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginStart="30dp"
               android:elevation="20dp"
               app:cardCornerRadius="10dp"
               app:layout_constraintStart_toStartOf="parent"
               >
               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_gravity="center"
                   android:textColor="@color/white"
                   android:background="#FDB94B"
                   android:textStyle="bold"
                   android:padding="2dp"
                   android:textSize="16dp"
                   android:gravity="center"
                   android:text="Tech Interview"/>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/resume"
               android:layout_width="120dp"
               android:layout_height="30dp"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginStart="30dp"
               android:elevation="20dp"
               app:cardCornerRadius="10dp"
               android:visibility="gone"
               app:layout_constraintStart_toStartOf="parent"
               >
               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_gravity="center"
                   android:textColor="@color/white"
                   android:background="#FDB94B"
                   android:textStyle="bold"
                   android:padding="2dp"
                   android:textSize="16dp"
                   android:gravity="center"
                   android:text="Resume"/>

           </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
               android:id="@+id/User_query"
               android:layout_width="120dp"
               android:layout_height="30dp"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginStart="30dp"
               android:elevation="20dp"
               app:cardCornerRadius="10dp"
               app:layout_constraintStart_toStartOf="parent"
               >
               <TextView

                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   app:layout_constraintTop_toTopOf="parent"
                   app:layout_constraintStart_toStartOf="parent"
                   android:layout_gravity="center"
                   android:textColor="@color/white"
                   android:background="#FDB94B"
                   android:textStyle="bold"
                   android:padding="2dp"
                   android:textSize="16dp"
                   android:gravity="center"
                   android:text="Topic Interview"/>

           </androidx.cardview.widget.CardView>

       </LinearLayout>

   </HorizontalScrollView>
    <LinearLayout
        android:id="@+id/searchBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emailconstraint"
        android:layout_width="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_height="40dp"
        android:background="@drawable/colour"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/horizonal_scroll">
        <EditText
            android:id="@+id/topicEditText"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:textColorHint="#ACB3BF"
            android:hint="Enter Topic For Interview "
            android:textColor="@color/white"
            android:singleLine="true"
            android:background="@null"

            android:layout_marginHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="18dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>



    <Button
        android:id="@+id/generateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"

        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/emailconstraint"
        app:layout_constraintTop_toBottomOf="@id/horizonal_scroll"
        android:layout_marginTop="20dp"
       android:backgroundTint="#FDB94B"
       />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/emailconstraint">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="match_parent"/>
        <androidx.cardview.widget.CardView

            android:id="@+id/robot_image"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:cardCornerRadius="20dp"
            android:elevation="20dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/robot1">

            </ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/questionTextView"
            android:textSize="20sp"
            android:text="what is android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="@color/white"/>
        <TextView
             android:id="@+id/answerTextView"
             android:textSize="18sp"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="16dp"
            android:visibility="gone"
             android:hint="Your answer will appear here..."
             android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:layout_marginHorizontal="20dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/speakButton"
                android:text="Speak"
                android:layout_width="wrap_content"
                android:backgroundTint="#FDB94B"
                android:visibility="gone"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginStart="80dp"
                android:id="@+id/nextButton"
                android:text="Next"
                android:layout_width="wrap_content"
                android:backgroundTint="#FDB94B"
                android:visibility="gone"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:padding="10dp"
            android:visibility="gone"
            android:text="Generating AI Feedback "
            android:gravity="center"
            android:layout_marginTop="8dp"
            />



    <TextView
        android:id="@+id/analysisTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:padding="10dp"
        android:visibility="gone"
        android:layout_marginTop="8dp"
        />


    <TextView
        android:id="@+id/result"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    </LinearLayout>
    </ScrollView>
</LinearLayout>

